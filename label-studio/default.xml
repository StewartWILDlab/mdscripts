<View>
    <View style="display:flex">
        <View style="flex: 80%">
            <Image name="image" value="$image"/>
        </View>
        <View style="flex: 20%">
            <View>
                <RectangleLabels name="label_rectangles" toName="image" showInline="false">
                    <Label value="animal" background="rgba(0, 255, 0, 1)"/>
                    <Label value="person" background="rgba(1, 146, 243, 1)"/>
                    <Label value="vehicle" background="rgba(241, 135, 0, 1)"/>
                </RectangleLabels>
            </View>

            <Header value="Species" size="3"/>
            <View whenLabelValue="animal" visibleWhen="region-selected">
                <Choices name="species" toName="image" perRegion="true" showInline="true" required="true">
                    <Choice value="moose"/>
                    <Choice value="wolf"/>
                    <Choice value="caribou"/>
                    <Choice value="sandhill crane"/>
                    <Choice value="unknown"/>
                </Choices>
                <View whenChoiceValue="wolf">
                    <Choices name="young_wolf" toName="image" perRegion="true" showInline="true">
                        <Choice value="YOY"/>
                        <Choice value="YEA"/>
                    </Choices>
                </View>
                <View whenChoiceValue="moose">
                    <Choices name="young_moose" toName="image" perRegion="true" showInline="true">
                        <Choice value="YOY"/>
                        <Choice value="YEA"/>
                    </Choices>
                </View>
            </View>
            <Header value="Sex" size="3"/>
            <View whenLabelValue="animal" visibleWhen="region-selected">
                <Choices name="sex" toName="image" perRegion="true" showInline="true" required="true">
                    <Choice value="M"/>
                    <Choice value="F"/>
                    <Choice value="U"/>
                </Choices>
            </View>
            <Header value="Behavior" size="3"/>
            <View whenLabelValue="animal">
                <Choices name="behavior" toName="image" perRegion="true" showInline="true">
                    <Choice value="feeding"/>
                    <Choice value="travelling"/>
                </Choices>
            </View>
        </View>
    </View>
    <Header value="Comments" size="3"/>
    <View>
        <TextArea name="comment"/>
    </View>
</View>