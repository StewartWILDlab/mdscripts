<View>
    <Style> .interface { padding-left: 10px }</Style>
    <View style="display:flex ">
        <View style="flex: 80%">
            <Image name="image" value="$image" zoomControl="true" zoom="true" />
        </View>
        <View className="interface" style="flex: 20%">
            <View>
                <View>
                    <RectangleLabels name="label_rectangles" toName="image" showInline="false">
                        <Label value="animal" background="rgba(0, 255, 0, 1)" />
                        <Label value="person" background="rgba(1, 146, 243, 1)" />
                        <Label value="vehicle" background="rgba(241, 135, 0, 1)" />
                    </RectangleLabels>
                </View>
            </View>

            <View whenLabelValue="animal" visibleWhen="region-selected">
                <Header value="Species" size="3" />
                <Choices name="species" choice="single-radio" toName="image" perRegion="true" showInline="true" required="true">

                    <Choice value="Moose" />
                    <Choice value="Caribou" />
                    <Choice value="Wolf" />
                    <Choice value="Sandhill Crane" />
                    <Choice value="Spruce Grouse" />

                </Choices>

                <Collapse>
                    <Panel value="Other species">
                        <Choices name="other_species" choice="single-radio" toName="image" perRegion="true" showInline="true" required="true">

                            <Choice value="White-tailed deer" />
                            <Choice value="Black bear" />
                            <Choice value="Wolverine" />
                            <Choice value="Marten" />
                            <Choice value="Red Squirrel" />
                            <Choice value="Canada Lynx" />
                            <Choice value="Fisher" />
                            <Choice value="Beaver" />
                            <Choice value="American porcupine" />
                            <Choice value="Northern flying squirrel" />
                            <Choice value="Muskrat" />
                            <Choice value="Red fox" />
                            <Choice value="Polar bear" />
                            <Choice value="Raccoon" />
                            <Choice value="Striped skunk" />
                            <Choice value="Short-tailed weasel" />
                            <Choice value="Long-tailed weasel" />
                            <Choice value="Least weasel" />
                            <Choice value="American mink" />
                            <Choice value="River otter" />
                            <Choice value="Snowshoe hare" />
                            <Choice value="Eastern chipmunk" />
                            <Choice value="Least chipmunk" />
                            <Choice value="Groundhog" />
                            <Choice value="Bat" />
                            <Choice value="Canada Jay" />

                            <Choice value="Duck" />
                            <Choice value="Small Bird" />
                            <Choice value="Bat" />
                            <Choice value="Owl" />

                            <Choice value="unknown" />

                        </Choices>
                    </Panel>
                </Collapse>

                <View whenChoiceValue="Wolf">
                    <Choices choice="single-radio" name="young_wolf" toName="image" perRegion="true" showInline="true">
                        <Choice alias="YOY" value="Young of Year" />
                        <Choice alias="YEA" value="Yearling" />
                    </Choices>
                </View>
                <View whenChoiceValue="Moose">
                    <Choices choice="single-radio" name="young_moose" toName="image" perRegion="true" showInline="true">
                        <Choice alias="YOY" value="Young of Year" />
                        <Choice alias="YEA" value="Yearling" />
                    </Choices>
                </View>
                <View whenChoiceValue="Black Bear">
                    <Choices choice="single-radio" name="young_bear" toName="image" perRegion="true" showInline="true">
                        <Choice alias="YOY" value="Young of Year" />
                        <Choice alias="YEA" value="Yearling" />
                    </Choices>
                </View>
                <View whenChoiceValue="Caribou">
                    <Choices choice="single-radio" name="young_caribou" toName="image" perRegion="true" showInline="true">
                        <Choice alias="YOY" value="Young of Year" />
                        <Choice alias="YEA" value="Yearling" />
                    </Choices>
                </View>
                <View whenChoiceValue="Canada Lynx">
                    <Choices choice="single-radio" name="young_lynx" toName="image" perRegion="true" showInline="true">
                        <Choice alias="YOY" value="Young of Year" />
                        <Choice alias="YEA" value="Yearling" />
                    </Choices>
                </View>
            </View>


            <View whenLabelValue="animal" visibleWhen="region-selected">
                <Header value="Sex" size="3" />
                <Choices name="sex" choice="single-radio" toName="image" perRegion="true" showInline="true" required="true">
                    <Choice alias="M" value="Male" />
                    <Choice alias="F" value="Female" />
                    <Choice alias="U" value="Unknown" />
                </Choices>
            </View>

            <View whenLabelValue="animal" visibleWhen="region-selected">
                <Collapse>
                    <Panel value="Behavior + Markings">
                        <View whenLabelValue="animal" visibleWhen="region-selected">
                            <Header value="Behavior" size="3" />
                            <Choices name="behavior" toName="image" perRegion="true" showInline="true">
                                <Choice alias="F" value="Feeding" />
                                <Choice alias="T" value="Travelling" />
                                <Choice alias="S" value="Standing" />
                                <Choice alias="L" value="Lying" />
                            </Choices>
                        </View>

                        <View whenLabelValue="animal" visibleWhen="region-selected">
                            <Header value="Unique Markings" size="3" />
                            <Choices name="unique_markings" toName="image" perRegion="true" showInline="true">
                                <Choice alias="AM" value="Antler Marks" />
                                <Choice alias="PM" value="Pelage Marks" />
                                <Choice alias="AL" value="Alopecia" />
                                <Choice alias="OT" value="Other" />
                            </Choices>
                        </View>
                    </Panel>
                </Collapse>
            </View>


        </View>
    </View>
    <Header value="Comments" size="3" />
    <View>
        <TextArea name="comment" />
    </View>
    <Choices name="notes" choice="multiple" toName="image" perRegion="true" showInline="true">
        <Choice alias="UNS" value="Unsure" />
        <Choice alias="POI" value="Picture of Interest" />
    </Choices>
</View>